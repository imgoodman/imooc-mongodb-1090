extends ../layout.jade
block content
  div.container
    div.row
      a.btn.btn-primary(href="/admin/movie",target="_blank") <i class="fa fa-fw fa-plus"></i>新增
        i.fa.fa-fw.fa-plus
      table.table.table-hover.table-striped
        thead
          tr
            th 电影名字
            th 导演
            th 国家
            th 语言
            th 上映年份
            th 录入时间
            th 查看
            th 编辑
            th 删除
        tbody
          each item in movies
            tr(class="item-id-#{item._id}")
              td #{item.title}
              td #{item.doctor}
              td #{item.country}
              td #{item.language}
              td #{item.year}
              td #{moment(item.meta.createAt).format("MM/DD/YYYY")}
              td
                a.btn.btn-info(href="/movie/#{item._id}",target="_blank") 查看
              td: a.btn.btn-default(href="/admin/movie/update/#{item._id}",target="_blank") 修改
              td
                button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
  script(src="/js/admin.js")